doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
.container
  form(action='/api/productos' enctype='application/x-www-form-urlencoded' method='POST')
    .form-group
      label(for='titleInput') Title
      input#titleInput.form-control(type='text' name='title' placeholder='Ingresar titulo')
    .form-group
      label(for='priceInput') Precio
      input#priceInput.form-control(type='number' name='price' placeholder='Ingresar precio')
    .form-group
      label(for='thumbnailInput') Thumbnail
      input#thumbnailInput.form-control(type='text' name='thumbnail' placeholder='Ingresar url')
    button.btn.btn-primary(type='submit') Submit
